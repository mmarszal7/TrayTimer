<Application x:Class="TrayTimer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TrayTimer"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate x:Key="CustomNotificationTemplate">
            <Grid Width="200" HorizontalAlignment="Right">
                <Border Padding="10" CornerRadius="10,10,10,10" Background="Black" BorderBrush="White" BorderThickness="2">
                    <Grid Margin="20">
                        <Grid.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="12"/>
                            </Style>
                        </Grid.Resources>
                        <TextBlock Text="{Binding Text}" FontWeight="Bold" FontSize="16" Foreground="White"/>
                    </Grid>
                </Border>
            </Grid>
        </DataTemplate>
    </Application.Resources>
</Application>
